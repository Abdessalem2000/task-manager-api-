# Environment Variables Example
# Copy this file to .env and fill in your actual values

# JWT Secret Key (Required for authentication)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# MongoDB Connection String (Required for database)
DATABASE_URL=mongodb://localhost:27017/taskmanager

# OR use individual MongoDB variables
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=taskmanager

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration (Optional)
CORS_ORIGIN=*

# Session Configuration (Optional)
SESSION_SECRET=your-session-secret-here

# Email Configuration (Optional - for password reset emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (Optional - for CORS)
FRONTEND_URL=https://your-domain.vercel.app

# API Configuration (Optional)
API_VERSION=v1

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Optional)
LOG_LEVEL=info
